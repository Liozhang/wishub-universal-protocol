# WisHub MVP 环境变量配置文件
# 用途：配置WisHub MVP的各项参数

# ============================================
# AI配置
# ============================================
# AI API密钥（必需，从OpenAI或其他AI服务商获取）
AI_API_KEY=your_openai_api_key_here

# AI模型名称（可选，默认gpt-4）
AI_MODEL=gpt-4

# AI API基础URL（可选，默认OpenAI）
AI_BASE_URL=https://api.openai.com/v1

# ============================================
# 数据库配置
# ============================================
# 数据库连接URL（可选，默认SQLite）
DATABASE_URL=sqlite:///data/wishub.db

# ============================================
# Redis配置
# ============================================
# 是否使用Redis（可选，默认true）
USE_REDIS=true

# Redis连接URL（可选，当USE_REDIS=true时生效）
REDIS_URL=redis://localhost:6379

# Redis密码（可选，如果Redis设置了密码）
REDIS_PASSWORD=

# ============================================
# FAISS配置
# ============================================
# FAISS索引路径（可选，默认./data/faiss/）
FAISS_INDEX_PATH=./data/faiss/

# FAISS索引类型（可选，默认IndexFlatL2）
# 可选值: IndexFlatL2, IndexFlatIP, IndexIVFFlat, IndexIVFPQ
FAISS_INDEX_TYPE=IndexFlatL2

# 向量维度（可选，默认384，取决于Sentence-Transformers模型）
FAISS_VECTOR_DIM=384

# ============================================
# 文件存储配置
# ============================================
# 文件存储路径（可选，默认./data/files/）
FILE_STORAGE_PATH=./data/files/

# ============================================
# 应用配置
# ============================================
# 应用名称
APP_NAME=WisHub MVP

# 应用版本
APP_VERSION=1.0.0

# 调试模式（可选，默认false）
DEBUG=false

# API主机（可选，默认0.0.0.0）
API_HOST=0.0.0.0

# API端口（可选，默认8000）
API_PORT=8000

# API文档路径（可选，默认/docs）
API_DOCS_PATH=/docs

# ============================================
# 日志配置
# ============================================
# 日志级别（可选，默认INFO）
# 可选值: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件路径（可选，默认./logs/）
LOG_PATH=./logs/

# ============================================
# 验证配置
# ============================================
# 是否启用L4.5 AI验证（可选，默认true）
ENABLE_L4_5_VERIFICATION=true

# L4.5验证置信度阈值（可选，默认0.7）
L4_5_CONFIDENCE_THRESHOLD=0.7

# ============================================
# 缓存配置
# ============================================
# 缓存TTL（秒，可选，默认3600）
CACHE_TTL=3600

# ============================================
# 限制配置
# ============================================
# API每分钟请求限制（可选，默认100）
RATE_LIMIT_PER_MINUTE=100

# 最大文件大小（MB，可选，默认100）
MAX_FILE_SIZE_MB=100

# ============================================
# 安全配置
# ============================================
# API密钥（可选，用于API认证）
API_SECRET_KEY=your_secret_key_here

# Token过期时间（秒，可选，默认86400）
TOKEN_EXPIRE_SECONDS=86400

# ============================================
# Agent配置
# ============================================
# Agent超时时间（秒，可选，默认60）
AGENT_TIMEOUT_SECONDS=60

# Agent最大重试次数（可选，默认3）
AGENT_MAX_RETRIES=3

# ============================================
# 开发配置
# ============================================
# 是否启用CORS（可选，默认true）
ENABLE_CORS=true

# 允许的CORS源（可选，默认*）
CORS_ORIGINS=*

# 是否启用API文档（可选，默认true）
ENABLE_DOCS=true
